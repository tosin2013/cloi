{
  "name": "repository",
  "version": "1.0.0",
  "type": "analyzers",
  "description": "Advanced repository analysis and expertise tracking system with codebase understanding, contributor analysis, and knowledge mapping for all programming languages and infrastructure technologies",
  "author": "Cloi Core Team",
  "license": "GPL-3.0",
  "keywords": ["repository-analysis", "expertise-tracking", "codebase-intelligence", "git-analysis", "contributor-insights", "knowledge-mapping", "multi-language", "infrastructure-as-code", "cloi-plugin"],
  "main": "index.js",
  "cloi": {
    "minVersion": "1.0.8",
    "pluginVersion": "1.0"
  },
  "dependencies": {
    "simple-git": "^3.20.0",
    "ignore": "^5.3.0",
    "semver": "^7.5.4",
    "yaml": "^2.3.4"
  },
  "capabilities": [
    "multi-language-analysis",
    "infrastructure-analysis",
    "expertise-mapping",
    "contributor-analysis",
    "codebase-intelligence",
    "knowledge-extraction",
    "dependency-analysis",
    "architecture-mapping",
    "evolution-tracking",
    "framework-detection",
    "iac-analysis"
  ],
  "supportedLanguages": [
    "javascript", "typescript", "python", "java", "csharp", "go", "rust", 
    "php", "ruby", "swift", "kotlin", "cpp", "c", "scala", "clojure",
    "elixir", "erlang", "haskell", "dart", "lua", "perl", "r", "matlab",
    "shell", "bash", "powershell", "sql", "html", "css", "scss", "less"
  ],
  "supportedInfrastructure": [
    "ansible", "terraform", "kubernetes", "docker", "vagrant", "chef",
    "puppet", "salt", "cloudformation", "arm-templates", "helm",
    "compose", "nomad", "consul", "vault"
  ],
  "supportedFrameworks": [
    "react", "vue", "angular", "svelte", "next", "nuxt", "gatsby",
    "django", "flask", "fastapi", "spring", "express", "nestjs",
    "laravel", "symfony", "rails", "phoenix", "gin", "echo",
    "aspnet", "dotnet", "xamarin", "unity"
  ],
  "configuration": {
    "enabled": true,
    "analysis": {
      "includeHistory": true,
      "maxHistoryDepth": 1000,
      "includeDeletedFiles": false,
      "analyzeBranches": ["main", "master", "develop"],
      "excludePatterns": [
        "node_modules/**",
        ".git/**",
        "dist/**",
        "build/**",
        "target/**",
        "__pycache__/**",
        "*.pyc",
        "*.log",
        "*.tmp",
        ".DS_Store",
        "vendor/**",
        ".terraform/**",
        ".ansible/**"
      ]
    },
    "languages": {
      "detectAll": true,
      "includeConfigFiles": true,
      "analyzePackageManagers": true,
      "trackDependencies": true,
      "minFileSize": 10,
      "maxFileSize": "10MB"
    },
    "infrastructure": {
      "analyzeAnsible": true,
      "analyzeTerraform": true,
      "analyzeKubernetes": true,
      "analyzeDocker": true,
      "analyzeCloudFormation": true,
      "trackInfraPatterns": true
    },
    "expertise": {
      "enabled": true,
      "trackContributors": true,
      "analyzeCommitMessages": true,
      "trackFileOwnership": true,
      "expertiseThreshold": 0.1,
      "recentActivityWeight": 0.7,
      "codeOwnershipWeight": 0.3,
      "languageSpecialization": true,
      "infrastructureSpecialization": true
    },
    "intelligence": {
      "enabled": true,
      "extractPatterns": true,
      "trackDependencies": true,
      "analyzeArchitecture": true,
      "detectFrameworks": true,
      "mapModules": true,
      "analyzeInfrastructure": true,
      "detectDesignPatterns": true
    },
    "caching": {
      "enabled": true,
      "ttl": 3600000,
      "maxCacheSize": "100MB",
      "persistCache": true,
      "cacheByLanguage": true
    },
    "output": {
      "generateReports": true,
      "formats": ["json", "html", "markdown"],
      "includeMetrics": true,
      "includeVisualization": true,
      "languageBreakdown": true,
      "expertiseMatrix": true,
      "dependencyGraph": true
    },
    "performance": {
      "maxConcurrentAnalysis": 4,
      "chunkSize": 100,
      "timeout": 300000,
      "skipLargeFiles": true,
      "parallelLanguageAnalysis": true
    }
  }
}